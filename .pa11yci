{
	"defaults": {
		"threshold": 999999,
		"timeout": 60000,
		"concurrency": 1,
		"standard": "WCAG2AA",
		"runners": [
			"axe",
			"htmlcs"
		],
		"reporters": [
			"cli",
			[
				"json",
				{
					"fileName": "./static/pa11y-reports/reports.json"
				}
			]
		],
		"chromeLaunchConfig": {
			"args": [
				"--disable-dev-shm-usage",
				"--no-sandbox",
				"--disable-gpu"
			]
		}
	},
	"urls": [
		"https://mandrasch.dev/",
		"https://aktuelle-erderhitzung.de",
		"https://oerhoernchen.de"
	]
}
